#!/usr/bin/env bash
# Script: 1-show_attached_IPs
# Description: Displays all active IPv4 IPs on the machine

# Use the ip command to retrieve the active IPv4 addresses
ip_addresses=$(ip -4 addr show | grep inet | awk '{print $2}' | cut -d'/' -f1)

# Iterate over each IP address and print them
for ip in $ip_addresses; do
  echo "$ip"
done

# End of script
